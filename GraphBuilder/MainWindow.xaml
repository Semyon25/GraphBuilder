<Window x:Class="GraphBuilder.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GraphBuilder"
        mc:Ignorable="d"
        Title="MainWindow" Height="500" Width="880">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition />
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal">
            <TextBlock Text="COM" />
            <TextBox Text="{Binding PortName}" Height="24" Width="50"/>
            <Button Content="Подключить" Click="Connect_Click" />
            <TextBox Text="{Binding Command}" Width="200" Margin="30,0,0,0" />
            <Button Content="Отправить" Click="Send_Click" />
        </StackPanel>

        <Canvas x:Name="canvas" Grid.Row="1">
            <Line X1="10" Y1="10" X2="10" Y2="415" Stroke="Black" StrokeThickness="2" />
            <Line X1="10" Y1="212" X2="860" Y2="212" Stroke="Black" StrokeThickness="2" />
            <TextBlock Text="0" Margin="2,203,0,0" />
            <TextBlock Text="200" Margin="0,-2,0,0" />
            <TextBlock Text="-200" Margin="0,415,0,0" />
        </Canvas>
    </Grid>
</Window>
